<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.0" method="upgrade">
 
	<name>Support</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>DÃ©cembre 2013</creationDate>
	<author>Marc STUDER</author>
	<authorEmail>mon_mail@editions-eni.fr</authorEmail>
	<authorUrl>http://www.editions-eni.fr</authorUrl>
	<copyright>Copyright Info</copyright>
	<license>License Info</license>
	<!--  The version string is recorded in the components table -->
	<version>0.1</version>
	<!-- The description is optional and defaults to the name -->
	<description>Gestion des tickets d'un service de support informatique</description>

	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.sql</file>
        </sql>
    </uninstall>
	<update> 
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>support.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
		<folder>models</folder>
	</files>
<!-- 	<languages folder="site">
		<language tag="en-GB">front_language/en-GB.com_support.ini</language>
		<language tag="fr-FR">front_language/fr-FR.com_support.ini</language>
	</languages> -->

	<administration>
		<!-- Administration Menu Section -->
		<menu>Gestion de tickets de support</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
				to copy FROM in the package to install therefore files copied
				in this section are copied from /admin/ in the package -->
		<files folder="admin">
				<filename>index.html</filename>
				<filename>support.php</filename>
				<filename>controller.php</filename>
				<folder>controllers</folder>
				<folder>helpers</folder>
				<folder>models</folder>
				<folder>sql</folder>
				<folder>tables</folder>
				<!-- views files section -->
				<folder>views</folder>
<!--				<languages folder="admin_language">
					<language tag="en-GB">language/en-GB.com_support.ini</language>
					<language tag="en-GB">language/en-GB.com_support.sys.ini</language>
				</languages> -->
		</files>                
	</administration>
</extension>
